{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Music Score Schema",
	"version": "0.0",
  "type": "object",
  "required": ["version", "title", "measures"],
  "properties": {
    "title": {
      "type": "string"
    },
		"version": {
      "type": "string",
      "enum": ["0.0"]
    },
    "measures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "time_signature": {
            "type": "string",
            "pattern": "^\\d{1,2}/\\d{1,2}$"
          },
          "contents": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["time", "notes", "duration"],
              "properties": {
                "time": {
                  "type": "number",
                  "minimum": 0
                },
                "notes": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "pattern": "^[a-gA-G]#?[0-9]$"
                  }
                },
                "duration": {
                  "type": "string",
                  "enum": ["w", "h", "q", "8", "16", "32"]
                },
                "dots": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 2
                }
              },
              "additionalProperties": false
            }
          }
        },
        "required": ["contents"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
