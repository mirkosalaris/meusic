{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Music Score Schema",
  "version": "0.1",
  "type": "object",
  "required": ["version", "title", "bpm", "measures"],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["0.1"]
    },
    "title": {
      "type": "string"
    },
    "bpm": {
      "type": "number",
      "minimum": 1,
      "maximum": 400,
      "default": 120
    },
    "measures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "bpm": {
            "type": "number",
            "minimum": 1,
            "maximum": 400,
            "default": 120
          },
          "time_signature": {
            "type": ["string", "null"],
            "pattern": "^\\d{1,2}/\\d{1,2}$"
          },
          "free_time": {
            "type": "boolean"
          },
          "key_signature": {
            "type": "string",
            "pattern": "^[A-Ga-g]#?b?m?$",
            "default": "C"
          },
          "contents": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["time", "notes", "duration"],
              "properties": {
                "time": {
                  "type": "number",
                  "minimum": 0
                },
                "notes": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "pattern": "^[a-gA-G][#b]?[0-9]$"
                  }
                },
                "duration": {
                  "type": "string",
                  "enum": ["w", "h", "q", "8", "16", "32"]
                },
                "dots": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 2
                }
              },
              "additionalProperties": false
            }
          }
        },
        "required": ["contents"],
        "additionalProperties": false,
        "allOf": [
        {
          "if": {
            "required": ["time_signature"],
            "properties": {
              "time_signature": { "type": "null" }
            }
          },
          "then": {
            "properties": {
              "free_time": { "const": true }
            },
            "required": ["free_time"]
          },
          "else": {
            "properties": {
              "free_time": {
                "not": { "const": true }
              }
            }
          }
        }
      ]

      }
    }
  },
  "additionalProperties": false
}
